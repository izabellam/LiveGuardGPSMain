<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:layout_marginTop="@dimen/DP_10"
        android:layout_centerHorizontal="true"
        android:id="@+id/details_tracker_image"
        android:layout_width="@dimen/DP_100"
        android:layout_height="@dimen/DP_100" />

    <LinearLayout
        android:layout_below="@+id/details_tracker_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/details_tracker_name"
            android:textSize="@dimen/SP_16"
            android:text="Name "
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/details_tracker_age"
            android:textSize="@dimen/SP_16"
            android:text="Age "
            android:layout_below="@+id/details_tracker_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/details_tracker_gender"
            android:textSize="@dimen/SP_16"
            android:text="Gender"
            android:layout_below="@+id/details_tracker_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/details_tracker_description"
        android:textSize="@dimen/SP_16"
        android:text="Description "
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />



    </LinearLayout>

</RelativeLayout>